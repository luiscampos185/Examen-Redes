enable
configure terminal

hostname Switch-Acceso-Verde
no service password-encryption
ip domain-name JuanMark.com
ip ssh version 2
username ADMIN privilege 15 password 0 123

vlan 33
 name VLAN_33
vlan 34
 name VLAN_34
vlan 35
 name VLAN_35
vlan 36
 name VLAN_36
vlan 37
 name VLAN_37
exit

ip dhcp snooping vlan 33-37
no ip dhcp snooping information option
ip dhcp snooping
ip arp inspection vlan 33-37

spanning-tree mode pvst
spanning-tree extend system-id

interface range FastEthernet0/1 - 4
switchport access vlan 33
switchport mode access
switchport port-security
switchport port-security mac-address sticky
exit

interface range FastEthernet0/5 - 8
switchport access vlan 34
switchport mode access
switchport port-security
switchport port-security mac-address sticky
exit

interface range FastEthernet0/9 - 12
