exit

-----------------------------------
Router
----------------------------------

***Paso 1: Configurar el Servidor DHCP***

enable
configure terminal

! 1. EXCLUSIONES (Reservar las primeras 10 IPs para que no las entregue)
ip dhcp excluded-address 148.60.33.1 148.60.33.10
ip dhcp excluded-address 148.60.34.1 148.60.34.10
ip dhcp excluded-address 148.60.35.1 148.60.35.10
ip dhcp excluded-address 148.60.36.1 148.60.36.10
ip dhcp excluded-address 148.60.37.1 148.60.37.10


! 2. POOL PARA VLAN 33 (ti)
ip dhcp pool Ventas
 network 148.60.33.0 255.255.0.0
 default-router 148.60.33.1
 dns-server 8.8.8.8

! 3. POOL PARA VLAN 20 (Sistemas)
ip dhcp pool Ventas
 network 148.60.34.0 255.255.0.0
 default-router 148.60.34.1
 dns-server 8.8.8.8

! 4. POOL PARA VLAN 5 
ip dhcp pool Ventas
 network 148.60.35.0 255.255.0.0
 default-router 148.60.35.1
 dns-server 8.8.8.8
 
 ip dhcp pool Ventas
 network 148.60.36.0 255.255.0.0
 default-router 148.60.36.1
 dns-server 8.8.8.8
 
 ip dhcp pool Ventas
 network 148.60.37.0 255.255.0.0
 default-router 148.60.37.1
 dns-server 8.8.8.8

***Paso 2: Configurar las Interfaces "Router-on-a-Stick" (Hacia abajo)***

! Encender la interfaz física
interface GigabitEthernet0/0/0
 no shutdown
 exit

 interface GigabitEthernet0/0/0.33
 encapsulation dot1q 33 native
 ip address 148.60.34.1 255.255.255.0
 exit
 
 
! Subinterfaz para VLAN 5 (Nativa)
interface GigabitEthernet0/0/0.34
 encapsulation dot1q 34 native
 ip address 148.60.34.1 255.255.0.0
 exit
 
 
 interface GigabitEthernet0/0/0.35
 encapsulation dot1q 35 native
 ip address 148.60.35.1 255.255.0.0
 exit
 
 interface GigabitEthernet0/0/0.36
 encapsulation dot1q 36 native
 ip address 148.60.36.1 255.255.0.0
 exit
 
 interface GigabitEthernet0/0/0.37
 encapsulation dot1q 37 native
 ip address 148.60.37.1 255.255.0.0
 exit
 

 
 
 
 
 
 
 

! Subinterfaz para VLAN 10 (Ventas)
interface GigabitEthernet0/0.10
 encapsulation dot1q 10
 ip address 192.168.10.1 255.255.255.0
 exit

! Subinterfaz para VLAN 20 (Sistemas)
interface GigabitEthernet0/0.20
 encapsulation dot1q 20
 ip address 192.168.20.1 255.255.255.0
 exit

***Paso 3: Configurar la conexión hacia los Servidores (Hacia la derecha)***

interface GigabitEthernet0/1
 ip address 192.168.100.1 255.255.255.0
 no shutdown
 exit

